{
  "name": "gb-studio",
  "productName": "GB Studio",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist/index.js",
  "scripts": {
    "start": "run-p parcel:watch start:electron",
    "start:electron": "electron-forge start",
    "package": "electron-forge package",
    "make:electron": "electron-forge make",
    "make": "run-s parcel make:electron",
    "publish": "electron-forge publish",
    "parcel": "NODE_ENV=production node parcel.js",
    "parcel:watch": "node parcel.js",
    "lint": "eslint --cache --color --ext .jsx,.js src",
    "test": "jest",
    "coverage": "jest --coverage --runInBand || true"
  },
  "keywords": [],
  "author": "cmaltby",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "name": "GB Studio",
        "executableName": "GB Studio",
        "packageManager": "yarn",
        "icon": "src/images/icon/app_icon",
        "darwinDarkModeSupport": true,
        "afterCopy": [
          "./after-copy"
        ],
        "asar": true,
        "ignore": [
          "/.parcelCache($|/)",
          "/.vscode($|/)",
          "/coverage($|/)",
          "/src($|/)",
          "/test($|/)",
          "/appData($|/)",
          "/buildTools($|/)"
        ]
      },
      "electronWinstallerConfig": {
        "name": "gb_studio"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "gbstudio"
      }
    }
  },
  "dependencies": {
    "chokidar": "^2.1.2",
    "classnames": "^2.2.5",
    "deepmerge": "^3.1.0",
    "electron-compile": "^6.4.4",
    "electron-devtools-installer": "^2.1.0",
    "electron-is": "^3.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "fs-extra": "^7.0.1",
    "gbdkjs": "^2.1.4",
    "ggbgfx": "^1.0.0",
    "glob": "^7.1.3",
    "image-size": "^0.7.1",
    "lodash": "^4.17.11",
    "open": "0.0.5",
    "react": "^16.3.2",
    "react-dnd": "^2.6.0",
    "react-dnd-html5-backend": "^2.6.0",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "redux-undo": "^0.6.1",
    "rimraf": "^2.6.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^24.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "eslint": "^3",
    "eslint-config-airbnb": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^5",
    "eslint-plugin-react": "^7",
    "jest": "^24.0.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.2",
    "parcel-plugin-clean-dist": "^0.0.6",
    "redux-devtools-extension": "^2.13.7"
  },
  "jest": {
    "roots": [
      "test/"
    ],
    "verbose": true
  }
}
